  <h1>Books</h1>
<table class="table table-hover">
  <thead class="table-dark">
    <tr>
      <th>Title</th>
      <th>Author</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= link_to "Show", book_path(book) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

